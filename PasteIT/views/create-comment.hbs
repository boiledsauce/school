
<h1 class = "text-center">Create Guestbook comment</h1>
{{#if errors.length}}
	<p>Couldn't create the paste because:</p>
	<ul>
		{{#each errors}}
			<li>{{this}}</li>
		{{/each}}
	</ul>
{{/if}}
<form action="/guestbook/{{id}}/comments/create" method="POST">
	<div class="form-group">
  		<label class="form-label" for="input-example-3">Name</label>
  		<textarea class="form-input" id="input-example-3" name="name" placeholder="Name" rows="1"></textarea>
	</div>
	<div class="form-group">
  		<label class="form-label" for="input-example-3">Age</label>
  		<textarea class="form-input" id="input-example-3" name="age" placeholder="Age" rows="1"></textarea>
	</div>
	<div class="form-group">
  		<label class="form-label" for="input-example-3">Comment</label>
  		<textarea class="form-input" id="input-example-3" name="comment" placeholder="Comment" rows="2"></textarea>
	</div>
	<div>
		<input type="hidden" name="_csrf" value="{{csrfToken}}">
		<button type="submit">Post Comment</button>
	</div>
</form>