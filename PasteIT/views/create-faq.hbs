

<h1>Create FAQ</h1>
{{#if errors.length}}
	<p>Couldn't create the FAQ because:</p>
	<ul>
		{{#each errors}}
			<li>{{this}}</li>
		{{/each}}
	</ul>
{{/if}}
<form action="/faqs/create" method="POST">
	<div class="form-group">
  		<label class="form-label" for="input-example-3">Question</label>
  		<textarea class="form-input" id="input-example-3" name="question" placeholder="Textarea" rows="2"></textarea>
	</div>
	<div class="form-group">
  		<label class="form-label" for="input-example-3">Answer</label>
  		<textarea class="form-input" id="input-example-3" name="answer" placeholder="Textarea" rows="3"></textarea>
	</div>
	<div>
		<input type="hidden" name="_csrf" value="{{csrfToken}}">
		<button type="submit">Create</button>
	</div>
</form>