
<h1>Create Paste</h1>

{{#if errors.length}}
	<p>Couldn't create an create-entry because:</p>
	<ul>
		{{#each errors}}
			<li>{{this}}</li>
		{{/each}}
	</ul>
{{/if}}
<form action="/guestbook/create" method="POST">
	<div class="form-group">
  		<label class="form-label" for="input-example-3">Your name</label>
  		<textarea class="form-input" id="input-example-3" name="name" placeholder="Name" rows="1"></textarea>
	</div>
	<div class="form-group">
  		<label class="form-label" for="input-example-3">Your age</label>
  		<textarea class="form-input" id="input-example-3" name="age" placeholder="Your age" rows="1"></textarea>
	</div>
	<div class="form-group">
  		<label class="form-label" for="input-example-3">Your email</label>
  		<textarea class="form-input" id="input-example-3" name="email" placeholder="Your email" rows="1"></textarea>
	</div>
	<div class="form-group">
  		<label class="form-label" for="input-example-3">Entry</label>
  		<textarea class="form-input" id="input-example-3" name="entry" placeholder="Entry" rows="20"></textarea>
	</div>
	<div>
		<input type="hidden" name="_csrf" value="{{csrfToken}}">
		<button type="submit">Create Paste</button>
	</div>
</form>