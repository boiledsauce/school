<div>
    <ul>
    {{#each validationErrors}}
            <li>{{this}}</li>
        {{/each}}
    </ul>
</div>
<div class = "container">
    <div class = "columns">
        <div class ="columns col-5 mx-2 pt-2">
        <form action="/auth/login" method="POST">
            <div class="form-group">
                <h1 class = "mt-2">Log in</h1>
                <label class="form-label" for="input-example-1">Name</label>
                 <input class="form-input" type="text" name="username" placeholder="Name">
            </div>      
            <div class="form-group">
                <label class="form-label" for="input-example-1">Password</label>
                 <input class="form-input" type="password" name="password" placeholder="Password">
            </div>    
            <div class = "columns col-12 p-centered my-2">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
		    <button type="submit">Log in</button>
            </div>
        </form>
    </div>
    